<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/main_progress_tv"
                android:layout_width="match_parent"
                android:layout_height="448dp"
                android:text="progressbar zone"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="227dp"
                app:layout_constraintTop_toBottomOf="@id/main_progress_tv"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"
                android:paddingStart="24dp">

                <TextView
                    android:id="@+id/main_daymeal_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 끼니"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/main_daymeal1_cv"
                    android:layout_width="124dp"
                    android:layout_height="156dp"
                    app:layout_constraintTop_toBottomOf="@id/main_daymeal_title_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/color_point">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        android:text="첫 끼"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/main_daymeal2_cv"
                    android:layout_width="124dp"
                    android:layout_height="156dp"
                    app:layout_constraintTop_toBottomOf="@id/main_daymeal_title_tv"
                    app:layout_constraintStart_toEndOf="@id/main_daymeal1_cv"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/color_point">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        android:text="두 끼"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>