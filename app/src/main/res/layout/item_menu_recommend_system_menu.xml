<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/btn_menu_recommand_system"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/menu_recomm_system_menu_ll"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_menu_recomm_system_menu_wording"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:text="적절한 맛의 밸런스도 중요하죠."
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_menu_recomm_system_menu_cv"
                android:layout_width="209dp"
                android:layout_height="32dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/menu_recomm_system_menu_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/item_menu_recomm_system_menu_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/point"
                        android:textSize="20dp"
                        android:text="굽네치킨 고추바사삭"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/item_menu_recomm_system_menu_nutrient_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/item_menu_recomm_system_menu_cv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_menu_recomm_system_menu_nutrient_sacc_cv"
                    android:layout_width="66dp"
                    android:layout_height="68dp"
                    app:cardBackgroundColor="@color/point_light"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_menu_recomm_system_menu_nutrient_sacc_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textColor="@color/white"
                            android:text="탄"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/item_menu_recomm_system_menu_nutrient_sacc_num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="500"/>

                            <TextView
                                android:id="@+id/item_menu_recomm_system_menu_nutrient_sacc_g_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="g"/>


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_menu_recomm_system_menu_nutrient_potein_cv"
                    android:layout_width="66dp"
                    android:layout_height="68dp"
                    app:cardBackgroundColor="@color/point_light"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_menu_recomm_system_menu_nutrient_protein_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textColor="@color/white"
                            android:text="단"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/item_menu_recomm_system_menu_nutrient_protein_num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="500"/>

                            <TextView
                                android:id="@+id/item_menu_recomm_system_menu_nutrient_protein_g_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="g"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_menu_recomm_system_menu_nutrient_fat_cv"
                    android:layout_width="66dp"
                    android:layout_height="68dp"
                    app:cardBackgroundColor="@color/point_light"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_menu_recomm_system_menu_nutrient_fat_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textColor="@color/white"
                            android:text="지"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/item_menu_recomm_system_menu_nutrient_fat_num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="500"/>

                            <TextView
                                android:id="@+id/item_menu_recomm_system_menu_nutrient_fat_g_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="g"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="이 음식 어떠세요?"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/item_menu_recomm_system_menu_nutrient_ll"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:textSize="16sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>

