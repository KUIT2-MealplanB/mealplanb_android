<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    tools:context=".MenuRecommendWhatMenuFragment">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/menu_recomm_what_menu_ll"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menu_recomm_what_menu_cheat_button_lv"
            android:layout_width="100dp"
            android:layout_height="154dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/btn"
            android:layout_marginEnd="12dp"
            android:elevation="5dp"
            android:outlineProvider="background"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#7C5CF8"
                android:text="치팅데이"
                android:fontFamily="@font/pretendard_black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="맛있는 음식\n아무거나\n먹고싶어요."
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_recomm_what_menu_often_button_lv"
            android:layout_width="100dp"
            android:layout_height="154dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/btn"
            android:layout_marginEnd="12dp"
            android:elevation="5dp"
            android:outlineProvider="background"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="자주먹는"
                android:textColor="#7C5CF8"
                android:fontFamily="@font/pretendard_black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="가장 많이\n먹은 메뉴를\n알려주세요!"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_recomm_what_menu_popular_button_lv"
            android:layout_width="100dp"
            android:layout_height="154dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/btn"
            android:elevation="5dp"
            android:outlineProvider="background"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="인기있는"
                android:textColor="#7C5CF8"
                android:fontFamily="@font/pretendard_black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="남들은\n어떤 음식을\n먹나요?"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>