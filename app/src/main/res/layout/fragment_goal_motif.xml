<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    tools:context=".GoalMotifFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="이렇게 목표하고 있어요"
                android:textColor="#8D8D8D"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="목표 수정"
                android:textColor="#7C5CF8"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/goal_motif_cancel_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/cancel_ic"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goal_motif_subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 체중"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#101010"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/goal_motif_ll1"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/goal_motif_subtitle1"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시작 체중"
                        android:textColor="#8D8D8D"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/goal_motif_start_weight_et"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:hint="0.0"
                            android:textColorHint="@color/mono_gray3"
                            android:fontFamily="@font/pretendard_bold"
                            android:paddingStart="20dp"
                            android:background="@drawable/et_privacy"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="kg"
                            android:textColor="#101010"
                            android:textSize="16dp"
                            android:fontFamily="@font/pretendard_bold"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 체중"
                        android:textColor="#8D8D8D"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/goal_motif_want_weight_et"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:hint="0.0"
                            android:textColorHint="@color/mono_gray3"
                            android:fontFamily="@font/pretendard_bold"
                            android:paddingStart="20dp"
                            android:background="@drawable/et_privacy"
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="kg"
                            android:textColor="#101010"
                            android:textSize="16dp"
                            android:fontFamily="@font/pretendard_bold"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goal_motif_ll1_sub"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goal_motif_ll1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="권장 칼로리 계산: "
                    android:textColor="#8D8D8D"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/goal_motif_recommend_cal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#8D8D8D"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="1,500"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:textColor="#8D8D8D"
                    android:fontFamily="@font/pretendard_medium"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goal_motif_ll2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goal_motif_ll1_sub">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 탄단지 비율"
                    android:textColor="#101010"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="25dp"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/goal_motif_diet_spinner"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="40dp"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/spinner_background"
                    android:focusable="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goal_motif_ll3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goal_motif_ll2">

                <LinearLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="탄수화물"
                        android:textColor="#8D8D8D"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/goal_motif_carbo_et"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:hint="0"
                            android:textColorHint="@color/mono_gray3"
                            android:fontFamily="@font/pretendard_bold"
                            android:paddingStart="20dp"
                            android:background="@drawable/et_privacy"
                            android:focusable="false"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="%"
                            android:textColor="#101010"
                            android:textSize="16dp"
                            android:fontFamily="@font/pretendard_bold"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지방"
                        android:textColor="#8D8D8D"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/goal_motif_fat_et"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:hint="0"
                            android:textColorHint="@color/mono_gray3"
                            android:fontFamily="@font/pretendard_bold"
                            android:paddingStart="20dp"
                            android:background="@drawable/et_privacy"
                            android:focusable="false"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="%"
                            android:textColor="#101010"
                            android:textSize="16dp"
                            android:fontFamily="@font/pretendard_bold"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goal_motif_ll4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goal_motif_ll3">

                <LinearLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단백질"
                        android:textColor="#8D8D8D"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/goal_motif_protein_et"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:hint="0"
                            android:textColorHint="@color/mono_gray3"
                            android:fontFamily="@font/pretendard_bold"
                            android:paddingStart="20dp"
                            android:background="@drawable/et_privacy"
                            android:focusable="false"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="%"
                            android:textColor="#101010"
                            android:textSize="16dp"
                            android:fontFamily="@font/pretendard_bold"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 칼로리"
                        android:textColor="#8D8D8D"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/goal_motif_calories_et"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:hint="0"
                            android:textColorHint="@color/mono_gray3"
                            android:fontFamily="@font/pretendard_bold"
                            android:paddingStart="20dp"
                            android:background="@drawable/et_privacy"
                            android:focusable="false"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="kcal"
                            android:textColor="#101010"
                            android:textSize="16dp"
                            android:fontFamily="@font/pretendard_bold"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/goal_motif_complete_cv"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#7C5CF8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goal_motif_ll4"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:focusable="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="목표 변경 완료"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"/>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</FrameLayout>