<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuRecommendInitFragment">

    <LinearLayout
        android:id="@+id/menu_recomm_init_button_lv"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center|top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_recomm_init_btn_what_cl"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/btn"
            android:layout_marginEnd="12dp"
            android:elevation="5dp"
            android:outlineProvider="background"
            >

            <TextView
                android:id="@+id/menu_recomm_init_what_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16dp"
                android:text="어떤 음식"
                android:textColor="#7C5CF8"
                android:fontFamily="@font/pretendard_black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@+id/menu_recomm_init_what_tv"
                android:textSize="16dp"
                android:text="을"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/menu_recomm_init_what_eat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/menu_recomm_init_what_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:textSize="16dp"
                android:text="먹을까요?"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/menu_recomm_init_what_explain1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="음식의 종류를\n추천해드릴게요"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/mono_gray4"
                app:layout_constraintTop_toBottomOf="@id/menu_recomm_init_what_eat_tv"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_recomm_init_btn_how_cl"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/btn"
            android:elevation="5dp"
            android:outlineProvider="background"
            >

            <TextView
                android:id="@+id/menu_recomm_init_how_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16dp"
                android:text="얼마나"
                android:textColor="#7C5CF8"
                android:fontFamily="@font/pretendard_black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                />


            <TextView
                android:id="@+id/menu_recomm_init_how_eat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/menu_recomm_init_how_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:textSize="16dp"
                android:text="먹을까요?"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/menu_recomm_init_how_explain1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="음식의 양을\n추천해드릴게요"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/mono_gray4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/menu_recomm_init_how_eat_tv"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>